  body
    header.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="/") MWF Ltd
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/registerStock") Add Stock
            li.nav-item
              a.nav-link(href="/stocks") View Stock
            li.nav-item
              a.nav-link(href="/register-user") Add User
            li.nav-item
              a.nav-link(href="/user") View Users
            li.nav-item
              a.nav-link(href="/logout") Logout
    .container.mt-4
      block content
