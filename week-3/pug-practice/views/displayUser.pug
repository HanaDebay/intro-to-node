extends userLayout 
block content
  header.site-header.bg-dark.text-white.py-3.text-center
    h1 Mayondo Wood & Furniture (MWF) Ltd
    p.subtitle User Management

  main.container.my-5
    if users && users.length
      table.table.table-striped.table-bordered.mt-4
        thead.table-dark
          tr
            th Name
            th Email
            th Role
            th Phone
            th Date Registered
        tbody
          each user in users
            tr
              td #{user.fullName}
              td #{user.email}
              td #{user.role}
              td #{user.phone || "-"}
              td #{moment(user.createdAt).format("DD-MM-YYYY")}
    else
      p.mt-4.text-muted No users found. Please register a user.

    script.
      // set footer year automatically
      document.addEventListener("DOMContentLoaded", () => {
        document.getElementById("year").textContent = new Date().getFullYear();
      });
